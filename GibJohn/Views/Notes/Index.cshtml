@model IEnumerable<GibJohn.Models.Note>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="container-fluid courses">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-6 col-sm-12 spacing">
                <div class="card" style="width: 22rem;">
                    <img class="card-img-top" src="https://as2.ftcdn.net/v2/jpg/01/75/58/39/500_F_175583935_WasBxsJHn6n1FBxqelYdjBaASkzWhCm4.jpg" alt="Card image cap" style="height: 11rem;">
                    <div class="card-body">
                        <h5 class="card-title">@item.Topic</h5>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary text-center">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>